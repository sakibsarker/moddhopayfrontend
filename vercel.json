{
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    { 
      "source": "/auth/:path*",
      "destination": "/index.html"
    },
    { 
      "source": "/_data/:path*",
      "destination": "/_data/:path*"
    },
    { 
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}